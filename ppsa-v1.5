<style>
:root {
  --green: #0B5F4A;
  --light: #F7F9F8;
  --muted: #6A6A6A;
  --radius: 14px;
  --shadow: 0 6px 20px rgba(0,0,0,0.07);
}
body { margin:0; font-family: Arial, sans-serif; color:#222; background:#fff; }

/* Header */
.site-header { background:#fff; border-bottom:1px solid #eee; position:sticky; top:0; z-index:20; }
.nav { max-width:1200px; margin:auto; padding:15px 20px; display:flex; justify-content:space-between; align-items:center; }
.nav .brand h2 { margin:0; font-size:1.2rem; }
.nav .link { margin-left:20px; color:#333; text-decoration:none; font-size:0.9rem; }

/* Hero */
.split-hero { display:flex; min-height:70vh; padding:60px 20px; background:var(--light); }
.hero-left { flex:1; max-width:600px; }
.hero-left h1 { font-size:2.2rem; margin-bottom:10px; }
.hero-left .sub { margin-bottom:30px; color:var(--muted); }
.hero-right { flex:1; display:flex; align-items:center; justify-content:center; }
.hero-image { width:100%; height:380px; background:url('assets/img/hero.jpg') center/cover no-repeat; border-radius:var(--radius); box-shadow:var(--shadow); }

.btn { padding:10px 18px; border-radius:var(--radius); text-decoration:none; font-size:0.9rem; }
.btn-primary { background:var(--green); color:#fff; }
.btn-ghost { border:1px solid var(--green); color:var(--green); }

/* Quick tech */
.quick-tech { padding:30px 0; background:#fff; }
.qt-grid { display:flex; gap:20px; justify-content:center; max-width:1100px; margin:auto; }
.qt-card { background:var(--light); padding:16px 22px; border-radius:var(--radius); box-shadow:var(--shadow); }

/* About */
.about-grid { display:grid; grid-template-columns:1fr 1fr; gap:40px; max-width:1100px; margin:auto; padding:60px 20px; }
.about-img { background:url('assets/img/factory.jpg') center/cover no-repeat; border-radius:var(--radius); box-shadow:var(--shadow); }

/* Cards */
.grid { display:grid; gap:25px; grid-template-columns:repeat(auto-fit, minmax(260px, 1fr)); max-width:1100px; margin:auto; padding:20px; }
.card { background:#fff; padding:26px; border-radius:var(--radius); box-shadow:var(--shadow); }
.map-card { background-image:url('assets/img/map-light.svg'); background-position:right bottom; background-size:130px; background-repeat:no-repeat; }

/* Partners */
.partners-band { display:flex; justify-content:space-around; align-items:center; padding:40px 0; max-width:900px; margin:auto; }
.partners-band img { height:45px; opacity:0.85; transition:opacity .2s; }
.partners-band img:hover { opacity:1; }

/* Services */
.service-flow { display:flex; align-items:center; justify-content:center; gap:20px; padding:40px; max-width:1000px; margin:auto; }
.flow-step { text-align:center; max-width:260px; }
.flow-line { width:60px; height:2px; background:var(--green); }

/* Contact */
.contact-grid { max-width:1100px; margin:auto; display:grid; grid-template-columns:2fr 1fr; gap:40px; padding:40px 20px; }
.contact-form { background:#fff; padding:30px; border-radius:var(--radius); box-shadow:var(--shadow); display:flex; flex-direction:column; gap:10px; }
.contact-info { background:var(--light); padding:30px; border-radius:var(--radius); box-shadow:var(--shadow); }

/* Footer */
.page-footer { text-align:center; padding:20px; background:#eee; }
</style>
