<style>
/* Base layout */
:root {
  --brand-green: #0b5f4a;
  --surface: #ffffff;
  --muted: #6b6b6b;
  --maxw: 1200px;
  --fade-up: fadeUp 0.7s ease forwards;
}

@keyframes fadeUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes float {
  0% { transform: translateY(0); }
  50% { transform: translateY(-6px); }
  100% { transform: translateY(0); }
}

body {
  font-family: Arial, sans-serif;
  margin: 0;
  color: #222;
  background: #f8f8f8;
}

/* Header */
.site-header {
  position: sticky;
  top: 0;
  background: #fff;
  z-index: 999;
  border-bottom: 1px solid #eaeaea;
  animation: fadeUp 0.8s ease;
}

.nav {
  max-width: var(--maxw);
  margin: 0 auto;
  padding: 15px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav .link {
  margin-left: 20px;
  text-decoration: none;
  color: #333;
  font-weight: 500;
  transition: 0.2s;
}

.nav .link:hover {
  color: var(--brand-green);
}

/* Hero */
.hero {
  position: relative;
  background: linear-gradient(to bottom, #0b5f4a, #094c3b);
  color: #fff;
  padding: 120px 20px 80px;
  overflow: hidden;
}

.hero-floating-icon {
  position: absolute;
  font-size: 60px;
  color: rgba(255, 255, 255, 0.1);
  animation: float 4s ease-in-out infinite;
}

.hero-floating-icon:nth-child(1) { top: 20%; left: 10%; }
.hero-floating-icon:nth-child(2) { bottom: 25%; right: 15%; animation-delay: 1.5s; }

.hero-heading {
  font-size: 2.4rem;
  margin-bottom: 30px;
  animation: var(--fade-up);
}

.hero-features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 20px;
  margin-bottom: 40px;
  animation: var(--fade-up);
}

.feature {
  background: rgba(255,255,255,0.12);
  border-radius: 12px;
  padding: 20px;
  backdrop-filter: blur(4px);
  transition: 0.3s ease;
}

.feature:hover {
  background: rgba(255,255,255,0.2);
  transform: translateY(-4px);
}

.feature h3 {
  margin-top: 0;
  color: #fff;
  display: flex;
  align-items: center;
  gap: 10px;
}

.feature p {
  color: #e8e8e8;
}

/* CTA */
.cta-row {
  margin-top: 20px;
  display: flex;
  gap: 15px;
  animation: var(--fade-up);
}

.btn {
  padding: 12px 20px;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  transition: 0.3s ease;
}

.btn-primary {
  background: #fff;
  color: #0b5f4a;
}

.btn-primary:hover {
  background: #f0f0f0;
}

.btn-ghost {
  border: 1px solid #fff;
  color: #fff;
}

.btn-ghost:hover {
  background: rgba(255,255,255,0.1);
}

/* Sections */
section {
  padding: 80px 20px;
}

.section-head {
  max-width: var(--maxw);
  margin: 0 auto 40px;
  animation: var(--fade-up);
}

.grid {
  max-width: var(--maxw);
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 25px;
}

.card {
  background: var(--surface);
  padding: 25px;
  border-radius: 12px;
  box-shadow: 0 3px 8px rgba(0,0,0,0.06);
  transition: 0.3s ease;
  animation: var(--fade-up);
}

.card:hover {
  transform: translateY(-6px);
  box-shadow: 0 8px 16px rgba(0,0,0,0.08);
}

.card h4 {
  display: flex;
  align-items: center;
  gap: 10px;
}

/* Partners */
.partners {
  max-width: var(--maxw);
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 30px;
  align-items: center;
}

.partner img {
  width: 100%;
  filter: grayscale(100%);
  opacity: 0.7;
  transition: 0.3s;
}

.partner img:hover {
  filter: grayscale(0%);
  opacity: 1;
}

/* Footer */
.page-footer {
  background: #0b5f4a;
  color: #fff;
  text-align: center;
  padding: 20px;
}
</style>
</head>

